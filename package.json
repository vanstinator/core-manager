{
  "name": "project-xenomorph",
  "version": "0.0.1-alpha.0",
  "author": "Xeno Morph",
  "description": "My Electron app",
  "main": "main.js",
  "keywords": [],
  "scripts": {
    "release:alpha": "release-it --ci --preRelease=alpha",
    "release:beta": "release-it --ci --preRelease=beta",
    "release": "release-it --ci",
    "release:patch": "release-it patch --ci --preRelease=alpha",
    "release:minor": "release-it minor --ci --preRelease=alpha",
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@release-it/conventional-changelog": "^2.0.0",
    "electron": "^11.2.0",
    "release-it": "^14.2.2"
  },
  "volta": {
    "node": "15.6.0",
    "npm": "6.14.11"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "project_xenomorph"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
